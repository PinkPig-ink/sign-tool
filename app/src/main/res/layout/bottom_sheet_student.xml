<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/bottom_sheet_behavior"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="10dp"
            >
            <ImageView
                android:id="@+id/btm_stu_sign"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="40dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/map"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:text="立即签到"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginStart="40dp"
                app:layout_constraintLeft_toRightOf="@id/btm_stu_sign"
                app:layout_constraintTop_toTopOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="10dp"
            >
        <ImageView
            android:id="@+id/btm_number_student"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="40dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/kehupandian"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text="班级成员"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginStart="40dp"
            app:layout_constraintLeft_toRightOf="@id/btm_number_student"
            app:layout_constraintTop_toTopOf="parent"
            />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="10dp"
            >
        <ImageView
            android:id="@+id/btm_stu_quit"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/close"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text="退出班级"
            android:textStyle="bold"
            android:textColor="@color/app_color_theme_1"
            android:textSize="16sp"
            android:layout_marginStart="40dp"
            app:layout_constraintLeft_toRightOf="@id/btm_stu_quit"
            app:layout_constraintTop_toTopOf="parent"
            />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
