<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:contentPadding="24dp"
    cardView:cardCornerRadius="24dp"
    android:translationZ="2dp"
    android:clickable="false"
    android:foreground="?android:attr/selectableItemBackground"
    android:focusable="false"

    android:background="@android:color/white"

    cardView:cardElevation="12dp"

    >

    <RelativeLayout
        android:id="@+id/the_class"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/item_list_iv_list"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/hardwork" />

        <TextView
            android:id="@+id/className"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/item_list_iv_list"
            android:text="班级一"
            android:textSize="20dp"
             />
        <TextView
            android:id="@+id/classNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="100人"
            android:layout_toRightOf="@+id/item_list_iv_list"

            android:layout_below="@+id/className"

            />
        <TextView
            android:id="@+id/classCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:text="EFDSFG"
            android:textSize="20sp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/className"

            />
        <ImageView
            android:id="@+id/iv_class_menu"
            android:src="@drawable/gengduo"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:layout_alignParentTop="true"
            android:contentDescription="more"
            />

    </RelativeLayout>

    </androidx.cardview.widget.CardView>


